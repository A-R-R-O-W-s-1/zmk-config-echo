#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &layout_transform;
    };

    layout_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = 
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                 RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                                            RC(4,4) RC(4,5)                 RC(4,6) RC(4,7)
        >;
    };

    layout: layout {
        compatible = "zmk,physical-layout";
        label = "Echo Physical Layout";
        row-count = <5>;
        column-count = <12>;
        keys = 
            // Each key needs a unique identifier and position info
            // First row
            KEY_ESC  KEY_1    KEY_2    KEY_3     KEY_4     KEY_5               KEY_6     KEY_7    KEY_8     KEY_9     KEY_0     KEY_BSPC
            KEY_TAB  KEY_Q    KEY_W    KEY_E     KEY_R     KEY_T               KEY_Y     KEY_U    KEY_I     KEY_O     KEY_P     KEY_BSLH
            KEY_LALT KEY_A    KEY_S    KEY_D     KEY_F     KEY_G               KEY_H     KEY_J    KEY_K     KEY_L     KEY_SEMI  KEY_RET
            KEY_LSFT KEY_Z    KEY_X    KEY_C     KEY_V     KEY_B               KEY_N     KEY_M    KEY_COMMA KEY_DOT   KEY_FSLH  KEY_RSFT
                                                KEY_SPC  KEY_LCTRL           KEY_SPC   KEY_SPC
        >;
    };

    chosen {
        zmk,physical-layout = &layout;
    };
};

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            ;

    };
};